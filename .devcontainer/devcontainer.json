{
	"name": "Django dev container",
	"dockerComposeFile": [
		"../.ci/dev/docker-compose.yml"
	],
	"service": "django",
	"workspaceFolder": "/app/",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"settings": {
				"mypy.runUsingActiveInterpreter": true,
				"mypy.configFile": "pyproject.toml",
				"unocss.underline": false,
				"unocss.autocomplete.maxItems": 100,
				"unocss.colorPreview": false,
				"unocss.root": "/app/static_vite",
				"black-formatter.importStrategy": "fromEnvironment",
				"ruff.importStrategy": "fromEnvironment",
				"python.terminal.activateEnvironment": false,
				"python.defaultInterpreterPath": "/opt/pysetup/.venv/bin/python",
				"explorer.autoReveal": false,
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"diffEditor.ignoreTrimWhitespace": false,
					"editor.formatOnType": true
				},
				"editor.codeActionsOnSave": {
					"source.organizeImports": true
				},
				"emmet.includeLanguages": {"django-html": "html"}
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-azuretools.vscode-docker",
				"matangover.mypy",
				"antfu.unocss",
				"tamasfe.even-better-toml",
				"charliermarsh.ruff",
				"batisteo.vscode-django"
			]
		}
	}
}