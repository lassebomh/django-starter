    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Django",
            "type": "python",
            "python": "/opt/pysetup/.venv/bin/python",
            // "preLaunchTask": "Start vite",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Debug Worker",
            "type": "python",
            "python": "/opt/pysetup/.venv/bin/python",
            "request": "launch",
            "module": "celery",
            "args": ["-A", "mysite.celery", "worker", "-l", "info"],
            "justMyCode": true
        },
    ]
}