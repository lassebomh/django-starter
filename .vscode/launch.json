{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery",
            "type": "python",
            "autoReload": {
                "enable": true,
                "include": [
                    "${workspaceFolder}/**/*.py",
                ],
            },
            "envFile": "${workspaceFolder}/.env.dev",
            "request": "launch",
            "module": "celery",
            "args": ["-A", "mysite.celery", "worker", "-l", "info"],
            "console": "internalConsole",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "Individual",
                "order": 2,
            },
            "internalConsoleOptions": "neverOpen",
        },
        {
            "name": "Django",
            "type": "python",
            "envFile": "${workspaceFolder}/.env.dev",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
            ],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "django": true,
            "justMyCode": true,
            "console": "internalConsole",
            "presentation": {
                "hidden": false,
                "group": "Individual",
                "order": 2
            },
        },
    ],
    "compounds": [
        {
            "name": "Debug all",
            "configurations": [
                "Django",
                "Celery",
            ],
            "presentation": {
                "hidden": false,
                "group": "Compound",
                "order": 1
            },
            "stopAll": true,
        }
    ]
}