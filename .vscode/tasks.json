{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start development services",
            "type": "docker-compose",
            "runOptions": {
                "runOn": "folderOpen",
            },
            "presentation": {
                "reveal": "silent"
            },
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true
                },
                "files": [
                    "${workspaceFolder}/.ci/dev/docker-compose.yml"
                ],
            }
        },
        {
            "label": "Stop development services",
            "type": "docker-compose",
            "dockerCompose": {
                "down": {},
                "files": [
                    "${workspaceFolder}/.ci/dev/docker-compose.yml"
                ],
            }
        }
    ]
}